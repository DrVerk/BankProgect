<Window x:Class="BankProgect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm ="clr-namespace:BankProgect.BankClass"
        xmlns:l="clr-namespace:BankProgect"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Банковская система" Height="450" Width="800">

    <Grid>

        <TabControl HorizontalAlignment="Stretch" 
                    VerticalAlignment="Stretch" >
            <TabItem Header="{iconPacks:FontAwesome Kind=AlignLeftSolid}"
                     Height="20" Width="50"
                     VerticalAlignment="Bottom">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="5*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ListView x:Name="Us" HorizontalAlignment="Stretch"   VerticalAlignment="Stretch"
                               Grid.Column="0" SelectedItem="{Binding user,UpdateSourceTrigger=PropertyChanged}"
                              SelectionChanged="ListView_SelectionChanged">
                        
                        <ListView.View >
                            <GridView >
                                <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding UserName}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <GridSplitter Grid.Column="1" 
                                  HorizontalAlignment="Stretch"
                                  Grid.RowSpan="1" VerticalAlignment="Stretch" />
                    <GridSplitter Grid.Row="1" 
                                  HorizontalAlignment="Stretch"
                                  Grid.ColumnSpan="3" VerticalAlignment="Stretch" />
                    <ListView Grid.Column="2" 
                              HorizontalAlignment="Stretch"  
                              VerticalAlignment="Stretch" SelectedItem="{Binding Path=accaunts}">
                        <ListView.View >
                            <GridView>
                                <GridViewColumn Header="Тип" DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn Header="Счет" DisplayMemberBinding="{Binding Kech}"/>
                                <GridViewColumn Header="Ставка" DisplayMemberBinding="{Binding Bet}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <GroupBox Header="{iconPacks:Codicons Kind=Info}"
                              HorizontalAlignment="Stretch"
                               Grid.Row="2" 
                              VerticalAlignment="Stretch" Grid.ColumnSpan="3" BorderBrush="#FF070808"/>


                </Grid>
            </TabItem>
            <TabItem Header="{iconPacks:FontAwesome Kind=AddressCardSolid}" Width="50">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>


    </Grid>
</Window>
