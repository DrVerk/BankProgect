<Window x:Class="BankProgect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm ="clr-namespace:BankProgect.BankClass"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Банковская система" Height="450" Width="800">
    <Window.DataContext>
        <vm:BankControll/>

    </Window.DataContext>
    <Grid>
        <TabControl HorizontalAlignment="Stretch" 
                    VerticalAlignment="Stretch" >
            <TabItem  Height="20" 
                     VerticalAlignment="Bottom">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconFontAwesome Kind="AddressCardRegular"/>
                        <TextBlock Text="Действия" Margin="5,0,0,0"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="5*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!--<ListView x:Name="Us" HorizontalAlignment="Stretch"   VerticalAlignment="Stretch"
                               Grid.Column="0" SelectedItem="{Binding UserCollection}"
                              >
                        <ListView.ItemTemplate>

                            <DataTemplate >
                                <TextBlock>                        
                                   <Label Content="{Binding UserName}"/>
                                </TextBlock>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        -->
                    <!--<ListView.View >
                            <GridView >
                                <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding UserName}" Width="150"/>
                            </GridView>
                        </ListView.View>-->
                    <!--
                    </ListView>-->
                    <TreeView HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              Grid.Column="0" 
                              ItemsSource="{Binding UserCollection}"
                              x:Name="Taib" SelectedItemChanged="Taib_SelectedItemChanged">
                        <TreeView.ItemTemplate >
                            <DataTemplate >
                                <TextBlock >                
                                    <iconPacks:PackIconCodicons Kind="Book"/>
                                    <Label Content="{Binding UserName}"/>
                                </TextBlock>
                            </DataTemplate>
                        </TreeView.ItemTemplate>
                        <TreeView.ContextMenu>
                            <ContextMenu>
                                <MenuItem >
                                    <MenuItem.Header>
                                        <TextBox Text="{Binding name}"/>
                                    </MenuItem.Header>
                                    <MenuItem Command="{Binding AddUserCommand}"
                                          Header="Добавить нового пользователя"
                                          Icon="{iconPacks:Codicons Kind=Add}"/>                                   
                                </MenuItem>
                                <MenuItem Command="{Binding ClearUserCommand}" 
                                          Header="Удалить пользователя"
                                          Icon="{iconPacks:Codicons Kind=ArrowSmallDown}"/>
                            </ContextMenu>
                        </TreeView.ContextMenu>
                    </TreeView>

                    <GridSplitter Grid.Column="1" 
                                  HorizontalAlignment="Stretch"
                                  Grid.RowSpan="1" VerticalAlignment="Stretch" />
                    <GridSplitter Grid.Row="1" 
                                  HorizontalAlignment="Stretch"
                                  Grid.ColumnSpan="3" VerticalAlignment="Stretch" />
                    <ListView Grid.Column="2" 
                              HorizontalAlignment="Stretch"  
                              VerticalAlignment="Stretch" SelectedItem="{Binding UserAccounts}">
                        <ListView.View >
                            <GridView>
                                <GridViewColumn Header="Тип" DisplayMemberBinding="{Binding Name}" Width="100"/>
                                <GridViewColumn Header="Счет" DisplayMemberBinding="{Binding Kech}" Width="150"/>
                                <GridViewColumn Header="Ставка" DisplayMemberBinding="{Binding Bet}" Width="100"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <GroupBox Header="{iconPacks:Codicons Kind=Info}"
                              HorizontalAlignment="Stretch"
                               Grid.Row="2" 
                              VerticalAlignment="Stretch" Grid.ColumnSpan="3" BorderBrush="#FF070808"/>
                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconFontAwesome Kind="AddressCardSolid"/>
                        <TextBlock Text="Обзор" Margin="5,0,0,0"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
